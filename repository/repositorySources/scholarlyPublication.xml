<meta_metadata_repository name="scholarlyPublication" package="ecologylab.semantics.generated.library.scholarlyPublication">

	<meta_metadata name="source" extends="document" comment="Metadata related to where an article is published.">
		<scalar name="archive_name" scalar_type="String" as_composite_scalar="true" comment="Same as title, but used for composite scalar" />
		<scalar name="location" hide="true" />
		<scalar name="year_of_publication" scalar_type="Int" is_facet="true" />
		<scalar name="isbn" scalar_type="String" />
		<scalar name="pages" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="scholarly_article" extends="compound_document" schema_org_itemtype="http://schema.org/Article">
		<scalar name="metadata_page" shadows="location" comment="citation.cfm" scalar_type="ParsedURL" />
		<collection name="authors" shadows="author" comment="Set of authors." child_type="author" layer="8.0"/>
		<composite name="source" comment="Metadata related to where this article was published." type="source" layer="7.0"/>
		<scalar name="abstract_field" scalar_type="String" shadows="summary" tag="abstract" label="abstract" layer="9.0" hint="XML_LEAF" />
		<collection name="references" comment="Papers cited by this paper." child_tag="reference" child_type="scholarly_article" />
		<collection name="citations" comment="Papers that cite this paper." child_tag="citation" child_type="scholarly_article" />
		<collection name="classifications" comment="The Classifications of this paper." child_type="tag" />
		<collection name="keywords" comment="Key Terms of the paper." child_type="tag"/>
		<scalar name="pages" layer="-1.0" navigates_to="table_of_contents" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="dx_doi" type="document" dont_generate_class="true" redirect_handling="REDIRECT_FOLLOW_DONT_RESET_LOCATION">
		<selector url_path_tree="http://dx.doi.org"/>
	</meta_metadata>
	
	<meta_metadata name="ingeta_connect" type="document" dont_generate_class="true" redirect_handling="REDIRECT_FOLLOW_DONT_RESET_LOCATION">
		<selector url_path_tree="http://www.ingentaconnect.com"/>
	</meta_metadata>
	
	<meta_metadata name="informa_world" type="scholarly_article" dont_generate_class="true" parser="xpath">
		<selector url_stripped="http://www.informaworld.com/smpp/content~db=all" />
		
		<scalar name="title" xpath="//div[@id='breadcrumb']/text()[5]" />
		<scalar name="abstract_field" xpath="//div[@class='abstract']/text()[1]"/>
		<composite name="source">
			<scalar name="archive_name" xpath="//div[@id='breadcrumb']/a[2]/text()" />
			<scalar name="location"  xpath="//div[@id='breadcrumb']/a[2]/@href" />
		</composite>
	</meta_metadata>
</meta_metadata_repository>