<meta_metadata_repository name="search" package="ecologylab.semantics.generated.library.search" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- +++++++++++++++++++++++++++++++++ More Specific Types - Search & its Children +++++++++++++++++++++++++++++++++ -->

	<meta_metadata name="search_result" extends="metadata" comment="">
		<scalar name="heading" scalar_type="String" comment="The heading of search result" hide="true" />
		<scalar name="snippet" scalar_type="String" comment="The snippet of search result" />
		<scalar name="link" scalar_type="ParsedURL" comment="The link of the search result" hide="true" />
		<scalar name="link_other" scalar_type="ParsedURL" comment="Alternate link in search results" />
	</meta_metadata>

	<meta_metadata name="search" extends="document" comment="">
		<collection name="search_results" child_type="search_result" no_wrap="true" />
	</meta_metadata>

	<meta_metadata name="google_search" type="search" comment="The google Search class" user_agent_name="opera_9" parser="xpath">
		<selector url_stripped="http://www.google.com/search" />
		<collection name="search_results" xpath="//div[@id='res']//div//ol/li[@*]">
			<scalar name="heading" xpath="./h3/a" />
			<scalar name="snippet" xpath="./div[1]" />
			<scalar name="link" xpath="./h3/a/@href" />
		</collection>
		<semantic_actions>
			<get_field name="search_results" />
			<for_each collection="search_results" as="res">
				<get_field object="res" name="link" />
				<parse_document now="true">
					<arg value="link" name="container_link" />
					<arg value="res" name="mixin" />
				</parse_document>
			</for_each>
		</semantic_actions>
	</meta_metadata>

	<meta_metadata name="google_scholar_search_result" extends="search_result" comment="A google scholar search result" user_agent_name="opera_9" parser="xpath">
    <url_generator type="search" engine="google_scholar" use_id="title" />
		<scalar name="heading" as_natural_id="title" />
		<scalar name="document_link" scalar_type="ParsedURL" hide="true" />
		<scalar name="citations" scalar_type="Int" navigates_to="citations_link" />
		<scalar name="citations_link" scalar_type="ParsedURL" hide="true" />
		<scalar name="related_articles_link" scalar_type="ParsedURL" label="related articles" />
		<scalar name="versions" scalar_type="Int" navigates_to="versions_link" />
		<scalar name="versions_link" scalar_type="ParsedURL" hide="true" />
	</meta_metadata>

	<meta_metadata name="google_scholar_search" extends="document" comment="The google Search class" user_agent_name="opera_9" parser="xpath">
		<selector url_stripped="http://scholar.google.com/scholar" />
		<def_var name="links_row" xpath="//span[@class='gs_fl']" type="node" />
		<def_var name="pub_row" xpath="//span[@class='gs_a']" type="node" />
		<collection name="search_results" xpath="//div[@class='gs_r']" child_type="google_scholar_search_result" no_wrap="true">
			<scalar name="heading" xpath="./div/h3/a" />
			<scalar name="snippet" xpath="./font">
				<filter regex="Cited by [0-9]* - [A-Za-z \-@0-9]*" replace="" />
			</scalar>
			<scalar name="link" xpath="./div/h3/a/@href" />
			<scalar name="document_link" xpath="./span/a/@href" />
			<scalar name="citations" context_node="links_row" xpath="./a[1]">
				<filter regex="Cited by " replace="" />
			</scalar>
			<scalar name="citations_link" context_node="links_row" xpath="./a[1]/@href" />
			<scalar name="related_articles_link" context_node="links_row" xpath="./a[2]/@href" />
			<scalar name="versions" context_node="links_row" xpath="./a[last()]">
				<filter regex="All | versions" replace="" />
			</scalar>
			<scalar name="versions_link" context_node="links_row" xpath="./a[last()]/@href" />
		</collection>
		<semantic_actions>
			<get_field name="search_results" />
			<for_each collection="search_results" as="res">
				<get_field object="res" name="link" />
				<get_field object="res" name="document_link" />
				<if>
					<not_null value="document_link" />
					<parse_document now="true">
						<arg value="document_link" name="container_link" />
						<arg value="res" name="mixin" />
					</parse_document>
				</if>
				<if>
					<and>
						<null value="document_link" />
						<not_null value="link" />
					</and>
					<parse_document now="true">
						<arg value="link" name="container_link" />
					</parse_document>
				</if>
				<parse_document now="true">
					<arg value="link" name="container_link" />
				</parse_document>
			</for_each>
		</semantic_actions>
	</meta_metadata>

	<meta_metadata name="my_google_search" type="search" comment="The my_google Search class" user_agent_name="opera_9" parser="xpath">
		<selector url_stripped="http://staging.cs.tamu.edu:8080/my_google/search" />
		<collection name="search_results" xpath="//div[@class='result']">
			<scalar name="heading" xpath="./a/@href" />
			<scalar name="snippet" xpath="./p" />
			<scalar name="link" xpath="./span" />
		</collection>
		<semantic_actions>
			<get_field name="search_results" />
			<for_each collection="search_results" as="res">
				<get_field object="res" name="link" />
				<parse_document now="true">
					<arg value="link" name="container_link" />
				</parse_document>
			</for_each>
		</semantic_actions>
	</meta_metadata>

	<meta_metadata name="my_google_ecology0_search" type="search" comment="The my_google_ecology0 Search class" parser="xpath">
		<selector url_stripped="http://ecology0.csdl.tamu.edu/my_google/search" />
		<collection name="search_results" xpath="//div[@class='result']">
			<scalar name="heading" xpath="./a/@href" />
			<scalar name="snippet" xpath="./p" />
			<scalar name="link" xpath="./span" />
		</collection>
		<semantic_actions>
			<get_field name="search_results" />
			<for_each collection="search_results" as="res">
				<get_field object="res" name="link" />
				<parse_document now="true">
					<arg value="link" name="container_link" />
					<arg value="res" name="mixin" />
